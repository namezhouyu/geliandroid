<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="161dp"
    android:layout_height="94dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_itemview_related_video_img"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_loading"
        app:riv_corner_radius="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/iv_itemview_related_video_play"
        android:src="@drawable/last_icon_xiaobofangjian"/>

    <TextView
        android:id="@+id/tv_itemview_related_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="title"/>

    <TextView
        android:id="@+id/tv_itemview_related_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        tools:text="时间"/>

</RelativeLayout>
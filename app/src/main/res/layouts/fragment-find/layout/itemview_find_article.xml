<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_itemview_find_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="title"/>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/erv_itemview_find_article_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_itemview_find_article_avatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:src="@color/zhusediao"
            app:riv_corner_radius="12dp"/>

        <TextView
            android:id="@+id/tv_itemview_find_article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textSize="12sp"
            tools:text="@string/nickname"/>

        <TextView
            android:id="@+id/tv_itemview_find_article_viewnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textSize="10sp"
            tools:text="浏览次数()"/>

        <CheckBox
            android:id="@+id/cb_itemview_find_article_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/cb_like_small_selector"
            android:drawablePadding="2dp"
            android:text="(1000)"
            android:textColor="@color/zhusediao"
            android:textSize="10sp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/back_tiny"
    android:layout_toRightOf="@+id/back_tiny"
    android:background="@drawable/video_title_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/view_videodetails_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_btn_white_fanhui"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/shear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/nav_btn_white_fenxiang"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/cb_video_coll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@id/shear"
            android:button="@null"
            android:drawableLeft="@drawable/cb_shopdetails_coll_selector"
            android:padding="10dp" />

    </RelativeLayout>
</LinearLayout>
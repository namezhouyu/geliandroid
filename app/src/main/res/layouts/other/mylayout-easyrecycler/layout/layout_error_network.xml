<?xml version="1.0" encoding="utf-8"?>
<com.geli.m.coustomview.NetworkingErrorView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nev_layout_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/img_wangluoyichang"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/info_networkerror_pleaserefresh"
            android:textColor="@color/zhusediao"/>

        <Button
            android:id="@+id/bt_networkerrorview_refresh"
            style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgred_12r_shape"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/click_refresh"
            android:textColor="@color/white"/>

    </LinearLayout>

</com.geli.m.coustomview.NetworkingErrorView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="47dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="47dp"
    android:paddingRight="47dp">

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomline_et"
        android:drawableLeft="@drawable/icon_shouji"
        android:hint="@string/please_input_phone"
        android:inputType="number"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:textColorHint="@color/et_hint_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@drawable/bottomline_et"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/icon_mima"
            android:hint="@string/please_input_pass"
            android:inputType="textPassword"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColorHint="@color/et_hint_color"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/cb_login_viewpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/checkbox_pass_select"
            android:button="@null" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_gotoresetpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:text="@string/forgetpass"
        android:textColor="#2e2e2e"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/bt_login"
        style="@style/MyButton"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/loginbt_shape"
        android:button="@null"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="105dp"
        android:gravity="center_horizontal|bottom"
        android:text="@string/login_message1"
        android:textColor="@color/et_hint_color"
        android:textSize="10sp"/>

</LinearLayout>
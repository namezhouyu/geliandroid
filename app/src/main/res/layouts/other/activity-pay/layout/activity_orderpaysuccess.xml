<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/tv_orderpay_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/icon_tijiaochenggong80"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="支付成功"
            android:textColor="@color/zhusediao"
            android:textSize="28sp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_orderpay_success"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/submit_order_success_mess"
            android:visibility="gone"/>
    </RelativeLayout>

    <include layout="@layout/include_1dpline"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/icon_tishi"
        android:drawablePadding="5dp"
        android:text="@string/tips"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/submit_order_success_mess1"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/submit_order_success_mess11"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_orderpay_success_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/linered1dp_bottom_list"
        android:text="@string/geli_phone"
        android:textColor="@color/zhusediao"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/bt_orderpay_success_myorder"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/selector_btn_bg_red_r20"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/my_order"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/bt_orderpay_success_index"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_btn_bg_tran_gray_redstroke_r20"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/return_index"
        android:textColor="@color/zhusediao"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="80dp"
        android:gravity="bottom"
        android:text="@string/contact_customer_service_time"
        android:textSize="12sp"/>
</LinearLayout>
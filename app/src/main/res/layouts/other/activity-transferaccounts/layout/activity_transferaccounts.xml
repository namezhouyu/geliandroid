<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/shape_transparent_radius5"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/beneficiary_name"
                android:textSize="14sp"
                android:textColor="@color/text_999999"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tv_beneficiaryName_transferAccountsActivity"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/beneficiary_name"
                android:textSize="14sp"
                android:textColor="@color/text_333333"
                android:textIsSelectable="true"/>
            
        </LinearLayout>

        <include layout="@layout/include_1dpline" />

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/pay_bank"
                android:textSize="14sp"
                android:textColor="@color/text_999999"
                android:gravity="right"/>

            <ImageView
                android:id="@+id/iv_payBank_transferAccountsActivity"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/pay_bank"
                android:src="@drawable/bank_hx"
                android:textSize="14sp"
                android:textColor="@color/text_333333"/>

        </LinearLayout>

        <include layout="@layout/include_1dpline" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/bank_info_1"
                android:textSize="14sp"
                android:textColor="@color/text_999999"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tv_bankInfo_transferAccountsActivity"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_info_2"
                android:textSize="14sp"
                android:textColor="@color/text_333333"
                android:textIsSelectable="true"/>

        </LinearLayout>

        <include layout="@layout/include_1dpline" />


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/account_number"
                android:textSize="14sp"
                android:textColor="@color/text_999999"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tv_accountNumber_transferAccountsActivity"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/account_number"
                android:textSize="14sp"
                android:textColor="@color/text_333333"
                android:textIsSelectable="true"/>

        </LinearLayout>

        <include layout="@layout/include_1dpline" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/amount1"
                android:textSize="14sp"
                android:textColor="@color/text_999999"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tv_amount_transferAccountsActivity"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/amount1"
                android:textSize="14sp"
                android:textColor="@color/text_333333"
                android:textIsSelectable="true"/>

        </LinearLayout>

        <include layout="@layout/include_1dpline" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/order_number1"
                android:textSize="14sp"
                android:textColor="@color/text_999999"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tv_orderNumber_transferAccountsActivity"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/order_number1"
                android:textSize="14sp"
                android:textColor="@color/text_333333"
                android:textIsSelectable="true"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/zhusediao"
        android:textSize="13sp"
        android:text="@string/transferaccounts_tips1"
        android:gravity="center|left"
        android:background="@color/bg_fff5e6"/>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_999999"
        android:textSize="13sp"
        android:text="@string/transferaccounts_tips2"
        android:gravity="center|left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_copy_transferAccountsActivity"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/selector_btn_bg_gray_r7"
            android:textColor="@color/text_color"
            android:textSize="13sp"
            android:text="@string/copy_transfer_info"/>

        <Button
            android:id="@+id/btn_checkOrder_transferAccountsActivity"
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/selector_btn_bg_red_r7"
            android:textColor="@color/zhusediao"
            android:textSize="13sp"
            android:text="@string/check_the_order_details"/>

    </LinearLayout>




</LinearLayout>
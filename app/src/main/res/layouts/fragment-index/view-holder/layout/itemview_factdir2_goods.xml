<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shadow_radius2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_itemview_factdir2_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_itemview_factdir2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:maxEms="6"
        android:maxLines="1"
        android:singleLine="true"
        tools:text="思念2.5kg光汤包"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_itemview_factdir2_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        tools:text="$xxx"
        android:textColor="@color/zhusediao"
        android:textSize="12sp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <Button android:id="@+id/bt_index_orther_piling" style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/middle_btn_pingling"
        android:text="@string/piling_center"
        android:textColor="#2e2e2e"
        android:textSize="10sp"/>
    <Button android:id="@+id/bt_index_orther_changjia" style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/middle_btn_changjia"
        android:text="@string/changjia_zhigong"
        android:textColor="#2e2e2e"
        android:textSize="10sp"/>
    <Button android:id="@+id/bt_index_orther_overseas" style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/middle_btn_haiwai"
        android:text="@string/haiwai_zhicai"
        android:textColor="#2e2e2e"
        android:textSize="10sp"/>
    <Button android:id="@+id/bt_index_orther_logistics" style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/middle_btn_lenyun"
        android:text="@string/geli_lengyun"
        android:textColor="#2e2e2e"
        android:textSize="10sp"/>
    <Button android:id="@+id/bt_index_orther_jinrong" style="@style/MyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/middle_btn_jinrong"
        android:text="@string/geli_jinrong"
        android:textColor="#2e2e2e"
        android:textSize="10sp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/shadow_radius2"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_itemview_retailcenter_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:src="@drawable/img_shanghai"/>

    <TextView
        android:id="@+id/tv_itemview_retailcenter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        tools:text="广州批零中心"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemview_retailcenter_sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#efcf4e"
            android:textSize="12sp"
            tools:text="已售"/>

        <TextView
            android:id="@+id/tv_itemview_retailcenter_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            tools:text="距离"/>

    </LinearLayout>
</LinearLayout>
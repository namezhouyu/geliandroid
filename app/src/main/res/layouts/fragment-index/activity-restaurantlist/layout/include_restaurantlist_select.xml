<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lLayout_select_restaurantListSelect">

    <include layout="@layout/include_1dpline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/lLayout_addr_restaurantListSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_addr_restaurantListSelect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_xuanzedizi"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="地址选择"/>

            <ImageView
                android:id="@+id/iv_addr_restaurantListSelect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_zhankai"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/lLayout_sort_restaurantListSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sort_restaurantListSelect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_shaixuan"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/sort_screen"/>

            <ImageView
                android:id="@+id/iv_sort_restaurantListSelect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_zhankai"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_1dpline"/>
</LinearLayout>
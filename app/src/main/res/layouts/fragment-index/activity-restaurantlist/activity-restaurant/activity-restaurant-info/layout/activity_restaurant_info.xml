<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_RestaurantInfoActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="30dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_restaurantName_RestaurantInfoActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="xx学校团餐专供馆"/>

                <TextView
                    android:id="@+id/tv_restaurantInfo_RestaurantInfoActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/text_999999"
                    android:textSize="12sp"
                    tools:text="江苏泗阳正在进行国家食品安全推动工作，泗阳县也在火
热创建县级食品安全示范点，食药监局按照高要求、高标
准去监管这些企业。"/>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"/>

                <LinearLayout
                    android:id="@+id/llayout_location_RestaurantInfoActivity"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/iv_location_RestaurantInfoActivity"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_location_red"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_address_RestaurantInfoActivity"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:textColor="@color/text_999999"
                        tools:text="广州市环市西路水厂路五号"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/first_btn_jinru"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:textColor="@color/text_666666"
                    android:text="@string/market_environment"/>

                <com.geli.m.coustomview.MyEasyRecyclerView
                    android:id="@+id/erv_marketEnvironment_RestaurantInfoActivity"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    app:scrollbars="none"/>

                <TextView
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="13sp"
                    android:textColor="@color/text_666666"
                    android:text="@string/qualification_center"/>

                <com.geli.m.coustomview.MyEasyRecyclerView
                    android:id="@+id/erv_qualificationCenter_RestaurantInfoActivity"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    app:scrollbars="none"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/text_color"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/details"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/text_color"/>

            </LinearLayout>
            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->

                <WebView
                    android:id="@+id/wv_RestaurantInfoActivity"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <!--&lt;!&ndash; 数据出错 &ndash;&gt;-->
                <!--<include layout="@layout/layout_error_data"></include>-->
            <!--</RelativeLayout>-->

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
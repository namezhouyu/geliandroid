<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp">


    <ImageView
        android:id="@+id/iv_goods_GoodsRestaurantVH"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        tools:background="@drawable/icon"/>

    <TextView
        android:id="@+id/tv_goodsName_GoodsRestaurantVH"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_goods_GoodsRestaurantVH"
        app:layout_constraintStart_toEndOf="@id/iv_goods_GoodsRestaurantVH"
        app:layout_constraintEnd_toStartOf="@id/tv_retail_GoodsRestaurantVH"
        android:layout_marginStart="20dp"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_333333"
        tools:text="嘉佰农黄焖鸡 2.5k"/>

    <TextView
        android:id="@+id/tv_shop_GoodsRestaurantVH"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_goodsName_GoodsRestaurantVH"
        app:layout_constraintStart_toStartOf="@id/tv_goodsName_GoodsRestaurantVH"
        app:layout_constraintEnd_toStartOf="@id/tv_retail_GoodsRestaurantVH"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/icon_shop"
        android:drawablePadding="8dp"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_999999"
        tools:text="广州批零中心"/>


    <TextView
        android:id="@+id/tv_retail_GoodsRestaurantVH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="@id/tv_shop_GoodsRestaurantVH"
        app:layout_constraintBottom_toBottomOf="@id/tv_shop_GoodsRestaurantVH"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10sp"
        android:textColor="@color/zhusediao"
        android:background="@drawable/shape_bg_gray_r2"
        android:text="可零售"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_stall_GoodsRestaurantVH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_GoodsRestaurantVH"
        app:layout_constraintStart_toStartOf="@id/tv_goodsName_GoodsRestaurantVH"
        android:layout_marginTop="2dp"
        android:textSize="11sp"
        android:textColor="@color/text_ed6a6a"
        tools:text="1区46档"/>

    <TextView
        android:id="@+id/tv_price_GoodsRestaurantVH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_stall_GoodsRestaurantVH"
        app:layout_constraintBottom_toBottomOf="@id/iv_goods_GoodsRestaurantVH"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"
        android:textColor="@color/zhusediao"
        tools:text="¥ 询价"/>


</android.support.constraint.ConstraintLayout>
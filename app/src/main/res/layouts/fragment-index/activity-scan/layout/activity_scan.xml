<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/scanview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_borderSize="0dp"
        app:qrcv_cornerColor="#d4e7ed"
        app:qrcv_cornerSize="3dp"
        app:qrcv_customGridScanLineDrawable="@drawable/img_saomiao"
        app:qrcv_isScanLineReverse="false"
        app:qrcv_isShowTipBackground="true"
        app:qrcv_isShowTipTextAsSingleLine="true"
        app:qrcv_isTipTextBelowRect="true"
        app:qrcv_maskColor="#7f000000"
        app:qrcv_qrCodeTipText="请将二维码放入框内"
        app:qrcv_rectWidth="250dp"
        app:qrcv_tipBackgroundColor="#000"
        app:qrcv_tipTextMargin="20dp"
        app:qrcv_tipTextSize="12sp"
        app:qrcv_topOffset="170dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:onClick="back"
        android:src="@drawable/btn_fanhui"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:onClick="openFlash"
        android:src="@drawable/btn_shoudiantong_nor"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_select_frame_RightSideslipLayout"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.geli.m.coustomview.MyEasyRecyclerView
        android:id="@+id/erv_LayoutMenu"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"/>


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="45dp">

        <Button
            android:id="@+id/btn_reset_LayoutMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:textColor="@color/text_666666"
            android:textSize="14sp"
            android:background="@drawable/selector_btn_white_gray"/>

        <Button
            android:id="@+id/btn_confirm_LayoutMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/determine"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/selector_btn_bg_red_red"/>
    </LinearLayout>

</LinearLayout>

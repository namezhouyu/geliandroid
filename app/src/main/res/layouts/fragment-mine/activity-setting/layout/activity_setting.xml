<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"></include>
    <include layout="@layout/include_5dpline"></include>

    <TextView
        android:id="@+id/tv_setting_paypasssetting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/linegray1dp_bottom_list"
        android:drawableRight="@drawable/first_btn_jinru"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:text="@string/pay_pass_setting"/>

    <TextView
        android:id="@+id/tv_setting_loginpasssetting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/linegray1dp_bottom_list"
        android:drawableRight="@drawable/first_btn_jinru"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:text="@string/login_pass_setting"/>

    <TextView
        android:id="@+id/tv_setting_aboutus"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:drawableRight="@drawable/first_btn_jinru"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:text="@string/about_us"/>

    <include layout="@layout/include_5dpline"></include>

    <LinearLayout
        android:id="@+id/ll_setting_clearcachelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/linegray1dp_bottom_list"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/clear_cache"/>

        <TextView
            android:id="@+id/tv_setting_cachesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/first_btn_jinru"
            android:text="0.0M"
            android:textColor="@color/specifitext_color"
            android:textSize="12sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/check_update" />

        <TextView
            android:id="@+id/tv_setting_newversion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/first_btn_jinru"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:textColor="@color/zhusediao"
            tools:text="@string/check_update"/>
    </LinearLayout>

    <include layout="@layout/include_5dpline"></include>

    <TextView
        android:id="@+id/tv_setting_sign_out"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/sign_out"
        android:textColor="@color/zhusediao"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_color"/>
</LinearLayout>
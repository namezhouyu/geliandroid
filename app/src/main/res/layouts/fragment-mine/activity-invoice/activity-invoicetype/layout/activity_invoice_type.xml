<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"></include>

    <TextView
        android:id="@+id/tv_invoice_clicknouser"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/click_nouse_invoice"
        android:textColor="@color/zhusediao"
        android:textStyle="bold"/>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/erv_invoice_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/backgroundColor"
        app:scrollbars="none"/>

    <RelativeLayout
        android:id="@+id/rl_invoice_bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <TextView
            android:id="@+id/tv_invoice_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/btn_jiahao_bor40"
            android:drawablePadding="5dp"
            android:text="@string/add_invoice"
            android:textColor="@color/zhusediao"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>
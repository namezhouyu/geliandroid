<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_itemview_expenses_cord_all_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/text_999999"
        tools:text="@string/order_number1"/>


    <TextView
        android:id="@+id/tv_itemview_expenses_cord_all_type"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:maxLines="1"
        android:textSize="13dp"
        tools:text="@string/recharge"/>

    <TextView
        android:id="@+id/tv_itemview_expenses_cord_all_time"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_itemview_expenses_cord_all_order_id"
        android:textSize="13dp"
        android:textColor="@color/text_999999"
        tools:text="2018-5-3 18:45"/>

    <TextView
        android:id="@+id/tv_itemview_expenses_cord_all_money"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_itemview_expenses_cord_all_time"
        android:textSize="13dp"
        tools:text="998.00"/>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_d9d9d9"
        android:layout_below="@+id/tv_itemview_expenses_cord_all_time" />
</RelativeLayout>
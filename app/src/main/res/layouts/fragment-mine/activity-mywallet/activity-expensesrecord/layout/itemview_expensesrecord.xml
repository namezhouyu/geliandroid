<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">
    <ImageView android:id="@+id/iv_itemview_expenses_img" android:layout_width="40dp"
               android:layout_height="40dp"
               tools:background="@color/zhusediao"/>
    <TextView android:id="@+id/tv_itemview_expenses_name" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_toRightOf="@id/iv_itemview_expenses_img"
              tools:text="@string/title_addbank"/>
    <TextView android:id="@+id/tv_itemview_expenses_time" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@id/iv_itemview_expenses_img"
              android:layout_marginLeft="10dp"
              android:layout_toRightOf="@id/iv_itemview_expenses_img"
              android:textSize="10sp"
              tools:text="time"/>
    <TextView android:id="@+id/tv_itemview_expenses_money" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              tools:text="消费"/>
</RelativeLayout>
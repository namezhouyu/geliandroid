<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_img_ivaorderdetail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/img_loading"/>

    <TextView
        android:id="@+id/tv_goodsname_ivaorderdetail"
        android:layout_width="@id/iv_img_ivaorderdetail"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_img_ivaorderdetail"
        app:layout_constraintStart_toEndOf="@id/iv_img_ivaorderdetail"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:maxEms="12"
        android:singleLine="true"
        android:textSize="12sp"
        tools:text="商店名字"/>

    <TextView
        android:id="@+id/tv_goodsspecific_ivaorderdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_goodsname_ivaorderdetail"
        app:layout_constraintStart_toStartOf="@id/tv_goodsname_ivaorderdetail"
        android:layout_marginTop="5dp"
        android:textColor="@color/specifitext_color"
        android:textSize="12sp"
        tools:text="规格"/>

    <TextView
        android:id="@+id/tv_price_ivaorderdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_img_ivaorderdetail"
        app:layout_constraintStart_toStartOf="@id/tv_goodsname_ivaorderdetail"
        android:textColor="@color/zhusediao"
        android:textSize="12sp"
        tools:text="@string/overseas_list_money"/>

    <TextView
        android:id="@+id/tv_number_ivaorderdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_price_ivaorderdetail"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/specifitext_color"
        android:textSize="12sp"
        tools:text="X5"/>

</android.support.constraint.ConstraintLayout>
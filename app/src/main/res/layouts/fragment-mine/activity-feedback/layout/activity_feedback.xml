<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/please_select_question_type"/>

            <RadioGroup
                android:id="@+id/rg_feedback_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <RadioButton
                    android:id="@+id/rb_feedback_pay"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/cb_overseas_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/pay_question"
                    android:textColor="@color/tv_overseas_selector"
                    android:textSize="12sp"/>

                <RadioButton
                    android:id="@+id/rb_feedback_goods"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/cb_overseas_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/goods_question"
                    android:textColor="@color/tv_overseas_selector"
                    android:textSize="12sp"/>

                <RadioButton
                    android:id="@+id/rb_feedback_shop"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/cb_overseas_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/shop_question"
                    android:textColor="@color/tv_overseas_selector"
                    android:textSize="12sp"/>

                <RadioButton android:id="@+id/rb_feedback_logistics"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/cb_overseas_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/logistics_question"
                    android:textColor="@color/tv_overseas_selector"
                    android:textSize="12sp"/>
            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bggary_2r_shape">

                <EditText
                    android:id="@+id/et_feedback_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/feedback_inputhint"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/specifitext_color"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_feedback_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text="0/200"
                    android:textColor="@color/text_color"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/uploadimg"/>

            <FrameLayout
                android:id="@+id/fl_feedback_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"/>

            <Button
                android:id="@+id/bt_feedback_submit"
                style="@style/MyButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bgred_20r_shape"
                android:paddingLeft="38dp"
                android:paddingRight="35dp"
                android:text="@string/submit"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
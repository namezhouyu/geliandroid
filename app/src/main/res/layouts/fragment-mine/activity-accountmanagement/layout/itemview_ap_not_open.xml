<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_shop_name_itemview_apnotopen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        tool:text="葫芦岛海兴隆水产品有限公司"/>

    <TextView
        android:id="@+id/tv_state_itemview_apnotopen"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name_itemview_apnotopen"
        app:layout_constraintStart_toStartOf="@id/tv_shop_name_itemview_apnotopen"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/zhusediao"
        android:textSize="12sp"
        android:text="@string/ap_not_opened_1"/>

    <Button
        android:id="@+id/btn_open_itemview_apnotopen"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name_itemview_apnotopen"
        app:layout_constraintBottom_toTopOf="@id/tv_state_itemview_apnotopen"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:background="@drawable/selector_btn_bg_red_red_stroke"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/open_up_immediately"/>

</android.support.constraint.ConstraintLayout>
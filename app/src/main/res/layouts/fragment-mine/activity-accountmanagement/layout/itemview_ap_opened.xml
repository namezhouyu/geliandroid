<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_shop_name_itemview_am"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        tool:text="葫芦岛海兴隆水产品有限公司"/>


    <TextView
        android:id="@+id/tv_start_time_itemview_am"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name_itemview_am"
        app:layout_constraintStart_toStartOf="@id/tv_shop_name_itemview_am"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_b4b4b4"
        android:textSize="10sp"
        tool:text="@string/date_of_checkout_day_f"/>


    <TextView
        android:id="@+id/tv_check_itemview_am"
        app:layout_constraintTop_toTopOf="@id/tv_shop_name_itemview_am"
        app:layout_constraintBottom_toBottomOf="@id/tv_shop_name_itemview_am"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/zhusediao"
        android:textSize="12sp"
        android:text="@string/check_my_account_1"/>

    <Button
        android:id="@+id/btn_pay_itemview_am"
        app:layout_constraintTop_toBottomOf="@id/tv_check_itemview_am"
        app:layout_constraintEnd_toEndOf="@id/tv_check_itemview_am"
        android:layout_marginTop="25dp"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:background="@drawable/selector_btn_bg_red_red_stroke"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/all_checkout"/>


    <TextView
        android:id="@+id/tv_closing_time_itemview_am"
        app:layout_constraintTop_toBottomOf="@id/btn_pay_itemview_am"
        app:layout_constraintEnd_toEndOf="@id/tv_check_itemview_am"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/zhusediao"
        tool:text="@string/remaining_date"/>

    <TextView
        android:id="@+id/tv_no_order_itemview_am"
        app:layout_constraintTop_toTopOf="@id/tv_start_time_itemview_am"
        app:layout_constraintEnd_toEndOf="@id/tv_check_itemview_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/text_b4b4b4"
        android:text="@string/no_ap_order"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_radius2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_itemview_browse_img"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_itemview_browse_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:maxEms="6" android:maxLines="1"
        android:singleLine="true"
        android:textSize="12sp"
        tools:text="思念2.5kg光汤包"/>

    <TextView
        android:id="@+id/tv_itemview_browse_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/zhusediao"
        android:textSize="12sp" tools:text="$xxx"/>
</LinearLayout>
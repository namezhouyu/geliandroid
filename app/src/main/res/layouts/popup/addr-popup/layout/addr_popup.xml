<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_gray_662e2e2e"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lLayout_AddrPopup"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/erv_left_AddrPopup"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:scrollbars="none"/>

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/erv_right_AddrPopup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/bg_f8f8f8"
            app:scrollbars="none"/>

    </LinearLayout>

    <View
        android:id="@+id/v_transparent_AddrPopup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>



    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_edit_bg">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/text_b4b4b4"
                android:textSize="14sp"
                android:text="@string/available_quota"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_available_quota_tap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                tool:text="20000.00"
                android:gravity="center"/>
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/line_color_999999"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/text_b4b4b4"
                android:textSize="14sp"
                android:text="@string/amount_used"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_amount_used_tap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                tool:text="15000.00"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/include_1dpline"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:text="@string/adjust_the_amount"/>


        <EditText
            android:id="@+id/et_quota_tap"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:background="@drawable/shape_edit_bg"
            android:inputType="number"
            android:gravity="center_vertical|right"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            tool:text=""
            android:hint="@string/temp_available_hind" />

        <TextView
            android:id="@+id/tv_max_quota_tap"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/zhusediao"
            tool:text="@string/max_temp_available"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/text_b4b4b4"
            android:text="@string/temp_available_remarks"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_adjustment_tap"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_btn_bg_red_r20"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@drawable/selector_text_white_black"
        android:text="@string/submission"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_itemview_cart_shopcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/cb_dayuan_selector"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_itemview_cart_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/first_btn_jinru"
            tools:text="名字"/>


        <TextView
            android:id="@+id/tv_itemview_cart_moq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/zhusediao"
            tools:text="@string/moq"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_itemview_cart_ap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/zhusediao"
            tools:text="@string/exceed_account_go"/>
    </LinearLayout>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/erv_itemview_cart_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/zhusediao">

    <LinearLayout
        android:id="@+id/dialog_contentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bgwhite_2r_shape"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_appricedialog"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="您已开通30天账期"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/text_color"/>

            <Button
                android:id="@+id/btn_top_cancel_appricedialog"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_quxiao_nor"/>
        </RelativeLayout>


        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/erv_price_appricedialog"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>

    </LinearLayout>

</RelativeLayout>
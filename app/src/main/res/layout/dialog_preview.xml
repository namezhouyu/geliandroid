<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:id="@+id/dialog_rootview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="#80000000">
    <LinearLayout
        android:id="@+id/dialog_contentview"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:background="@color/transparent"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager android:id="@+id/vp_preview_content"
                                           android:layout_width="match_parent"
                                           android:layout_height="0dp"
                                           android:layout_marginBottom="15dp"
                                           android:layout_weight="1"></android.support.v4.view.ViewPager>
        <TextView android:id="@+id/tv_preview_index" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:textColor="@color/white"
                  tools:text="1/3"/>
    </LinearLayout>
</RelativeLayout>
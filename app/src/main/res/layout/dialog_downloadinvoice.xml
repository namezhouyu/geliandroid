<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rootview"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout android:id="@+id/dialog_contentview"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <ImageView android:id="@+id/iv_dialog_downloadinvoice_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            tools:background="@color/zhusediao"/>
        <com.luck.picture.lib.widget.longimage.SubsamplingScaleImageView
            android:id="@+id/ssiv_img"
            android:layout_width="match_parent" android:layout_height="200dp"></com.luck.picture.lib.widget.longimage.SubsamplingScaleImageView>
        <Button android:id="@+id/bt_dialog_downloadinvoice_save" style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/bgred_2r_shape"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="7dp"
            android:text="@string/save"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>
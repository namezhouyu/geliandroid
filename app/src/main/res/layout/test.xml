              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical">
    <FrameLayout android:id="@+id/text_flcontent" android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:visibility="gone"></FrameLayout>
    <ImageView android:layout_width="1dp" android:layout_height="1dp"
               android:scaleType="centerCrop"/>
    <com.makeramen.roundedimageview.RoundedImageView android:layout_width="match_parent"
                                                     android:layout_height="140dp"
                                                     android:layout_margin="15dp"
                                                     android:scaleType="centerCrop"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_include_delegation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <include layout="@layout/include_delegation_layout"></include>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:id="@+id/tv_invlude_delegation_rule"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/first_btn_jinru"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/overseas_delegation_rule"
        android:textColor="@color/text_color"
        android:textSize="12sp"/>

    <include layout="@layout/include_1dpline"></include>
</LinearLayout>
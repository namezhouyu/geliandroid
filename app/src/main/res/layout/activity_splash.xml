<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_splash_rootlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/splash"/>
    <ImageView android:id="@+id/iv_splash_logo" android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="120dp"
               android:src="@drawable/default_logo"/>
    <TextView android:id="@+id/tv_splash_appname" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/iv_splash_logo"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:text="@string/app_name"
              android:textColor="@color/white"
              android:textSize="23sp"/>
    <ImageView android:id="@+id/cv_splash_vertical"
               android:layout_width="1dp"
               android:layout_height="50dp"
               android:layout_below="@id/tv_splash_appname"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="130dp"
               android:background="@color/white"
    />
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/cv_splash_vertical"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="7dp">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:ems="1"
                      android:text="@string/shplash_bottom1"
                      android:textColor="@color/white"
                      android:textSize="13sp"
                      android:textStyle="bold"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginRight="2dp"
                      android:layout_marginTop="-10dp"
                      android:gravity="right|top"
                      android:includeFontPadding="false"
                      android:text=","
                      android:textColor="@color/white"
                      android:textSize="13sp"
                      android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:ems="1"
                      android:text="@string/shplash_bottom2"
                      android:textColor="@color/white"
                      android:textSize="13sp"
                      android:textStyle="bold"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginRight="2dp"
                      android:layout_marginTop="-10dp"
                      android:gravity="right|top"
                      android:includeFontPadding="false"
                      android:text=","
                      android:textColor="@color/white"
                      android:textSize="13sp"
                      android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:ems="1"
                      android:text="@string/shplash_bottom3"
                      android:textColor="@color/white"
                      android:textSize="13sp"
                      android:textStyle="bold"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginRight="2dp"
                      android:layout_marginTop="-10dp"
                      android:gravity="right|top"
                      android:includeFontPadding="false"
                      android:text=","
                      android:textColor="@color/white"
                      android:textSize="13sp"
                      android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:ems="1"
                      android:text="@string/shplash_bottom4"
                      android:textColor="@color/white"
                      android:textSize="13sp"
                      android:textStyle="bold"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

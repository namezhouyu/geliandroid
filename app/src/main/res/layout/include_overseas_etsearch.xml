<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="7dp"
              android:paddingTop="7dp">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:src="@drawable/nav_btn_fanhui"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_weight="1" android:background="@drawable/bggary_15r_shape"
              android:drawableLeft="@drawable/nav_icon_sousuo"
              android:drawablePadding="5dp"
              android:hint="@string/please_input_search_goodsorcenter"
              android:imeOptions="actionSearch"
              android:paddingBottom="5dp"
              android:paddingLeft="10dp"
              android:paddingTop="5dp"
              android:textColor="@color/specifitext_color"
              android:textColorHint="@color/specifitext_color"
              android:textSize="12sp"
    />
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:src="@drawable/nav_btn_gouwuche_nor"/>
</LinearLayout>
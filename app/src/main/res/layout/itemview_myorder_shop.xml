<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_itemview_myorder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/first_btn_jinru"
            android:paddingTop="15dp"
            tools:text="名字"/>

        <TextView
            android:id="@+id/tv_itemview_myorder_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="15dp"
            android:textSize="12sp"
            tools:text="状态"/>
    </RelativeLayout>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/erv_itemview_myorder_goodslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_itemview_myorder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/zhusediao"
            android:textSize="12sp"
            tools:text="@string/overseas_list_money"/>
        <TextView
            android:id="@+id/tv_itemview_myorder_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_itemview_myorder_price"
            android:textSize="12sp"
            tools:text="商品数量" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp">

        <Button
            android:id="@+id/bt_itemview_myorder_right"
            style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_bg_red_gray_enabled_r12"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="上传凭证"/>

        <Button
            android:id="@+id/bt_itemview_myorder_left"
            style="@style/MyButton"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/bt_itemview_myorder_right"
            android:background="@drawable/borderred1dp_12r_shap"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/zhusediao"
            android:textSize="12sp"
            tools:text="取消订单"/>
    </RelativeLayout>
</LinearLayout>
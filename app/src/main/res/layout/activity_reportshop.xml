<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_reportshop_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:checkedButton="@+id/rb_reportshop_1">

                <RadioButton
                    android:id="@+id/rb_reportshop_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_singselect_selector"
                    android:drawablePadding="10dp"
                    android:text="@string/reportshop_messagae1"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_reportshop_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_singselect_selector"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/reportshop_messagae2"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/rb_reportshop_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_singselect_selector"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/reportshop_messagae3"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <RadioButton android:id="@+id/rb_reportshop_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/rb_singselect_selector"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/reportshop_messagae4"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </RadioGroup>

            <include layout="@layout/include_1dpline"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bggary_2r_shape">

                <EditText
                    android:id="@+id/et_reportshop_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/reportshop_inputhint"
                    android:textColor="#b4b4b4"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_reportshop_limt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:text="0/200"
                    android:textColor="@color/text_color"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <include layout="@layout/include_1dpline"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:text="@string/uploadimg"
                android:textColor="@color/text_color"
                android:textSize="14sp"/>

            <FrameLayout
                android:id="@+id/fl_reportshop_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-15dp"/>

            <Button
                android:id="@+id/bt_repoetshop_send"
                style="@style/MyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/loginbt_shape"
                android:button="@null"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginBottom="40dp"
                android:paddingBottom="12dp"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:paddingTop="12dp"
                android:text="@string/release"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
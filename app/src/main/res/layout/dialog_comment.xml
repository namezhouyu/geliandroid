<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog_rootview"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="horizontal">
    <LinearLayout android:id="@+id/dialog_contentview"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:background="@color/white"
                  android:orientation="horizontal"
                  android:paddingBottom="10dp"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:paddingTop="10dp">
        <EditText android:id="@+id/et_comment_dialog_content" android:layout_width="0dp"
                  android:layout_height="80dp"
                  android:layout_marginRight="10dp"
                  android:layout_weight="1"
                  android:background="@drawable/bggary_2r_shape"
                  android:gravity="top"
                  android:hint="@string/leave_comment"
                  android:imeOptions="actionSend"
                  android:padding="10dp"
                  android:textSize="12sp"/>
        <Button android:id="@+id/bt_comment_dialog_send" style="@style/MyButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bgred_2r_shape"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:text="@string/release"
                android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>